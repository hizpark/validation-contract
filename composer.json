{
    "name": "hizpark/validation-contract",
    "description": "Lightweight, framework-agnostic validation contract for PHP.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Harper Jang",
            "email": "harper.jang@outlook.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hizpark\\ValidationContract\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hizpark\\ValidationContract\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.1",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "scripts": {
        "cs:fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes --format=txt --diff --verbose --ansi",
        "cs:chk": "composer run cs:fix -- --dry-run",
        "stan": "phpstan analyse",
        "test": "phpunit --stop-on-failure",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html .phpunit_coverage"
    }
}
